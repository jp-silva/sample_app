<table class="concurso" summary="Informacao concurso">
	<tr>
		
    	<td class="main">
			<h1><b>Concurso</b>  <%= @concurso.tit %></h1>
			<table class="concurso" summary="concorrentes do grupo">
				<tr>
				  <td class="concorrentes">
				    <b>Título: </b>
						<span class="titulo"><%= @concurso.tit %></span> <br/>
					<% if current_user.admin? %>	
				    	<b>chave de acesso: </b>
						<span class="chave"><%=@concurso.chave %></span> <br/>
					<% end %>
					<b>data início: </b> 
				    	<span class="inicio">
							<%=@concurso.inicio.day%>-<%=	@concurso.inicio.month%>-<%=@concurso.inicio.year%> 
							<%=	@concurso.inicio.hour %>:<%=@concurso.inicio.min %>
						</span> <br/>
					<b>data início: </b> 
				    	<span class="fim">
							<%=@concurso.fim.day%>-<%=	@concurso.fim.month%>-<%=@concurso.fim.year%> 
							<%=	@concurso.fim.hour %>:<%=@concurso.fim.min %>
						</span> <br/>
				  	</td>
				</tr>
			</table>
		</td>
	
    	<td class="sidebar round">
			<% if current_user.admin? %>
	      		<%= link_to "Editar concurso", edit_concurso_path(@concurso) %>
		  		<br/>
	      		<%= link_to "Eliminar concurso", @concurso, :method => :delete,
		                                     			:confirm => "You sure?",
		                                     			:title => @concurso.tit %>
			<% end %>
			
	    </td>

  </tr>
</table>
