<tr>
  <td class="concorrentes">
    <b>nome: </b>
		<span class="nome"><%= concorrente.nome %></span> <br/>
    <b>e-mail: </b>
		<span class="email"><%=concorrente.email %></span> <br/>
	<b>n√∫mero de aluno</b> 
    	<span class="num"><%=concorrente.num %></span> <br/>
	<b>criado em:</b>
    	<span class="criado"><%=concorrente.created_at.strftime("%d/%m/%Y %H:%M:%S") %></span> <br/>
	<% if signed_in? %>
		<% if (current_user?(concorrente.user) || current_user.admin?)  %>
		  <td>
		    <%= link_to "delete", concorrente, :method => :delete,
		                                     :confirm => "You sure?",
		                                     :title => concorrente.nome %>
		  </td>
		  <td>
		    <%= link_to "editar",edit_concorrente_path(concorrente) %>
		  </td>
	    <% end %>
    <% end %>


  </td>
</tr>
